rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Reglas para imágenes de proyectos
    match /proyecto/{allPaths=**} {
      // Permitir lectura pública
      allow read: if true;

      // Solo usuarios autenticados pueden subir imágenes
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024  // Máximo 5MB
                   && request.resource.contentType.matches('image/.*');  // Solo imágenes
    }

    // Reglas para imágenes de productos
    match /producto/{allPaths=**} {
      // Permitir lectura pública
      allow read: if true;

      // Solo usuarios autenticados pueden subir imágenes
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024  // Máximo 5MB
                   && request.resource.contentType.matches('image/.*');  // Solo imágenes
    }

    // Regla por defecto: denegar todo lo demás
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
